<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sol.squid.review.ReviewMapper">

	<select id="getAllReviews" resultType="com.sol.squid.review.Review">
		select * from review order by rv_no desc
	</select>

	<insert id="regReview" parameterType="com.sol.squid.review.Review">
		insert into review values(review_seq.nextval, 'admin', #{rv_title}, sysdate, #{rv_rest_name}, #{rv_rest_img}, #{rv_rest_addr}, #{rv_content}, 3, 0)
	</insert>
	
</mapper>